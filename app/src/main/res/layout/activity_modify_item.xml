<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleAddItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:text="Modifier une tâche"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="33sp" />

        <EditText
            android:id="@+id/editTextNameItem"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:hint="Nom"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="323dp"
            android:layout_height="73dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:hint="Note"
            android:inputType="textPersonName" />

        <CheckBox
            android:id="@+id/checkBoxDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:text="Marquer comme fait" />

        <CheckBox
            android:id="@+id/checkBoxImportant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:text="Important" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="30dp"
                android:text="Planifié       " />

            <Button
                android:id="@+id/showCalendar"
                android:layout_width="125dp"
                android:layout_height="39dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="45dp"
                android:text="Calendrier"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="45dp"
                android:text="Planifié pour le :"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="98dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonModifyItem"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="modifier" />
    </LinearLayout>

</RelativeLayout>